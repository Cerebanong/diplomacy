{
  "name": "diplomacy",
  "version": "0.1.0",
  "private": true,
  "description": "Web-based Diplomacy game with AI agents",
  "workspaces": [
    "packages/shared",
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w @diplomacy/backend",
    "dev:frontend": "npm run dev -w @diplomacy/frontend",
    "build": "npm run build -w @diplomacy/shared && npm run build -w @diplomacy/backend && npm run build -w @diplomacy/frontend",
    "build:shared": "npm run build -w @diplomacy/shared",
    "build:backend": "npm run build -w @diplomacy/backend",
    "build:frontend": "npm run build -w @diplomacy/frontend",
    "lint": "npm run lint -w @diplomacy/shared && npm run lint -w @diplomacy/backend && npm run lint -w @diplomacy/frontend",
    "test": "npm run test -w @diplomacy/backend",
    "clean": "rimraf packages/*/dist packages/*/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jsdom": "^28.0.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
